alignment top_right
background yes
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Inconsolata:size=10.5
gap_x 5
gap_y 60
# minimum_size 5 5
maximum_width 260
net_avg_samples 2
no_buffers no
double_buffer yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_colour 000000
own_window_argb_visual yes
own_window_argb_value 110
# own_window_transparent yes
own_window_hints sticky,undecorated,below,skip_taskbar,skip_pager
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
TEXT
${color light blue}   ${scroll 40 $nodename - $sysname $kernel on 
$machine |}
${font Cantarell:size=12}${color Tan1}Time and Date${color light grey} $hr
$font${color grey}${color grey}Time:$alignc${font URW_Gothic:size=14}$color ${time %H} : ${time %M} : ${time %S}
$font${offset 60}${execpi 60 DJS=`date +%_d`; cal | sed s/"\(^\|[^0-9]\)$DJS"'\b'/'\1${color lightblue2}'"$DJS"'$color'/}
# | sed ':a;N;$!ba;s/\n/\n${offset 60}/g'}
${font Cantarell:size=12}${color Tan1}Basic info${color light grey} $hr
$font${color grey}Uptime:$color $uptime
${color grey}Frequency (in MHz):$color $freq
${color grey}Frequency (in GHz):$color $freq_g
${color grey}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}
${color grey}CPU Usage:$color $cpu% ${cpubar 4}
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${font Cantarell:Regular:size=12}${color Tan1}Battery${color light grey} $hr
${font}Status:$color ${battery BAT0}
${color grey}Remaining time:$color ${battery_time BAT0}
${color grey}Bar: ${color light green}${battery_bar 4 BAT0}
${font Cantarell:size=12}${color Tan1}File System ${color light grey} $hr
$font${color grey}Home - $color${fs_used /home}/${fs_size /home} ${fs_bar 6/home}
${color grey}Root - $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
${font Cantarell:size=12}${color Tan1}Connection and Network ${color light grey}$hr
${if_existing /proc/net/route wlp3s0}${font}${color grey}Wifi (wlp3s0): ${wireless_essid wlp3s0}
${color grey}IP ADDR: $color${addr wlp3s0}
${color grey} - Up:$color ${upspeed wlp3s0}
${color grey} - Down:$color ${downspeed wlp3s0}
${else}${color}No wifi connection
$endif${if_existing /proc/net/route enp2s0f0}${color grey}IP ADDR: $color${addr enp2s0f0}
${color grey} - Up:$color ${upspeed enp2s0f0}
${color grey} - Down:$color ${downspeed enp3s0f0}
${else}No Ethernet connection
$endif${font Cantarell:size=12}${color Tan1}Top Processes $color $hr
${font}${color grey}Name              PID   CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color lightgrey} ${top name 5} ${top pid 5} ${top cpu 5} ${top mem 5}
