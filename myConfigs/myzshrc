# Aliases, Defining aliases

alias xmonadconfig='vim ~/.xmonad/xmonad.hs'
alias aurget='wget -P /home/xiaoming/Downloads/AUR/'
alias ls='ls --color=auto -h --group-directories-first'
alias awesomecfg='vim ~/.config/awesome/rc.lua'
alias fancydesktop='startx ~/.xinitrc compiz'
alias grep='grep --color=auto --exclude-dir=.cvs --exclude-dir=.git --exclude-dir=.hg --exclude-dir=.svn'
alias v√•ldta='sudo !!'
alias screenshot='scrot ~/Pictures/%Y-%m-%d-%T-screenshot.png'
alias i3config='vim ~/.config/i3/config'
alias initrbenv='eval "$(rbenv init -)"'
alias matlab='~/bin/myscripts/matlab -nosplash -nodesktop'
alias sysupg='pacaur -Syu --noedit --noconfirm'
# Exports, Defining exports and variables


export EDITOR=vim
export PATH=$PATH:~/bin
export PATH=$PATH:/home/xiaoming/bin/myscripts:/opt/bin/kf5:/home/xiaoming/.gem/ruby/2.3.0/bin/
export PATH=$PATH:/home/xiaoming/.gem/ruby/2.4.0/bin/
export PE_DIR=/home/xiaoming/Documents/ProgrammingExercises/

export GTK_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export QT_IM_MODULE=ibus

export QT_AUTO_SCREEN_SCALE_FACTOR=0
export QT_QPA_PLATFORMTHEME=gtk2

export LD_LIBRARY_PATH=/opt/cuda/lib64

unset GREP_OPTIONS

if [ $ZSH_THEME = "powerlevel9k/powerlevel9k" ]; then
    DEFAULT_USER=$USER
    POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(os_icon dir_writable dir rbenv vcs)
    POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status root_indicator background_jobs history host)
    POWERLEVEL9K_PROMPT_ON_NEWLINE=true
	POWERLEVEL9K_HISTORY_BACKGROUND='010'
	POWERLEVEL9K_HOST_LOCAL_BACKGROUND='cyan'
	POWERLEVEL9K_HOST_LOCAL_FOREGROUND='black'
    POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX=""
    POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="\U2570\U2500 $ "
    POWERLEVEL9K_DIR_HOME_BACKGROUND='91'
    POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND="magenta"
    POWERLEVEL9K_CONTEXT_DEFAULT_BACKGROUND='121'
    POWERLEVEL9K_CONTEXT_DEFAULT_FOREGROUND='black'
	POWERLEVEL9K_SHORTEN_DIR_LENGTH=2
fi

if [ $ZSH_THEME = "powerline" ]; then
    POWERLINE_NO_BLANK_LINE="false"
    POWERLINE_PATH="short"
fi
